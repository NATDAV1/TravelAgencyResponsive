<form class="login" action="/login" method=post>
    <input type="text" name="username" placeholder="Username or Email">
    <input type="text" name="password" placeholder="Password">
  
    <input type="submit" value="login">
</form>

<div class="feedback">
    {{#if error}}
    <div class="error">
        {{error}}
       
    </div>
 {{/if}}
    {{#if message}}
    <div class="message">
        {{message}}
        <a href="/login">LOGIN</a>
    </div>
    {{/if}}
</div>