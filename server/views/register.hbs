<form class="register" action="/register" method=post>
<input type="text" name="username" placeholder="Username">
    <input type="text" name="email" placeholder="Email">
    <input type="text" name="password" pattern=".{8,}" placeholder="Password">
    {{!-- .{8,} is a password w/ at least 8 characters --}}
<input type="text" name="password" pattern=".{8,}" placeholder="Repeat password">
    <input type="submit" value="register">
</form>

<div class="feedback">
    {{#if error}}
    <div class="error">
        {{error}}
       
    </div>
 {{/if}}
    {{#if message}}
    <div class="message">
        {{message}}
        <a href="/login">login</a>
    </div>
    {{/if}}
</div>